
@{
    ViewData["Title"] = "Index";
}
<!-- Bootstrap -->
@section scripts{
    <script src="~/app/controller/product/index.js"></script>
    <script>
        var product = new productController();
        product.initialize();
    </script>
}
<div class="page-title">
    <div class="title_left">
        <h3>Sản phẩm<small>Danh sách sản phẩm</small></h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
                <input type="text" class="form-control" id="txtSearchKeyword" placeholder="Search for...">
                <span class="input-group-btn">
                    <button class="btn btn-default" id="btnSearch" type="button">Go!</button>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_content">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th width="10%">#</th>
                        <th>Danh mục</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Ảnh</th>
                        <th>Ngày tạo</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody id="table-content">
                    <!--Content table here-->
                </tbody>
            </table>
            <!--Pagination-->
            <div class="row">
                <div class="col-sm-5">
                    <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                        <select id="ddlShowPage">
                            <option value="10" selected="selected">10</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="50">50</option>
                        </select>
                        <span class="item-per-page">
                            bản ghi/trang.
                        </span>
                        Tổng số bản ghi: <strong id="lblTotalRow"></strong>
                    </div>
                </div><div class="col-sm-7">
                    <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                        <ul id="paginationUL"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <th scope="row">
            <button class="btn btn-default btn-sm"><i class="fa fa-pencil"></i></button>
            <button class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
        </th>
        <td>{{ProductCategoryName}}</td>
        <td>{{ProductName}}</td>
        <td>{{ProductPrice}}</td>
        <td>{{{ProductImage}}}</td>
        <td>{{ProductCreatedDate}}</td>
        <td>{{{ProductStatus}}}</td>
    </tr>
</script>
